---
const projects = [
  {
    title: "Autoescuela Web",
    description: "Aplicación de gestión para una autoescuela con login, roles, exámenes y más.",
    image: "/projects/autoescuela.png",
    technologies: ["JavaScript", "CSS"],
    live: "#",
    code: "https://github.com/sudoRaul/ProyectoAutoEscuelaJavaScript"
  },
  {
    title: "FreeTours",
    description: "Aplicación de gestión de tours gratuitos con registro, reservas y gestión de usuarios y rutas.",
    image: "/projects/tareas.png",
    technologies: ["Vue", "PHP", "MySQL", "Bootstrap"],
    live: "#",
    code: "https://github.com/sudoRaul/Proyecto-Free-Tours-Vue"
  },
  {
    title: "Sport Center La Morada",
    description: "Aplicación de gestión de las reservas de un polideportivo, gestionando roles, instalaciones, usuarios y seguiridad.",
    image: "https://i.pinimg.com/736x/d3/b2/7f/d3b27fa12610035fe77bfb218e062d14.jpg",
    technologies: ["Vue", "Flask", "MySQL", "Bootstrap"],
    live: "#",
    code: "https://github.com/sudoRaul/ProyectoAutoEscuelaJavaScript"
  }
];
---

<section id="projects" class="py-20 max-w-6xl mx-auto px-4 fade-in-section" data-aos="fade-up" data-aos-duration="800" data-aos-delay="500">
  <h2 class="text-4xl font-bold mb-12 text-center text-cyan-400">Projects</h2>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
    {projects.map(project => (
      <div class="bg-gray-900 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition duration-300 flex flex-col">
        <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />
        <div class="p-6 flex-1 flex flex-col justify-between">
          <div>
            <h3 class="text-white text-xl font-semibold mb-2">{project.title}</h3>
            <p class="text-gray-400 text-sm mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map(tech => (
                <span class="bg-cyan-800 text-cyan-100 text-xs px-2 py-1 rounded">{tech}</span>
              ))}
            </div>
          </div>
          <div class="mt-auto flex gap-3">
            {project.live && (
              <a href={project.live} target="_blank" class="text-sm bg-cyan-600 hover:bg-cyan-700 text-white px-4 py-2 rounded transition">Live</a>
            )}
            {project.code && (
              <a href={project.code} target="_blank" class="text-sm bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition">Code</a>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
