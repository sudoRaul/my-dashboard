---
import autoescuelaImg from '../multimedia/projects/autoescuela.png';
import freeToursImag from '../multimedia/projects/freeTours.png'
import sportCenter from '../multimedia/projects/sportCenter.png'

const projects = [
  {
    title: "Driving School Manage",
    description: "Management application for a driving school with login system, user roles, exams, and more.",
    image: autoescuelaImg, // Usar la variable importada
    technologies: ["JavaScript", "CSS", "HTML"],
    code: "https://github.com/sudoRaul/ProyectoAutoEscuelaJavaScript"
  },
  {
    title: "FreeTours",
    description: "Free tour management application with user registration, bookings, and admin control over users and tour routes.",
    image: freeToursImag,
    technologies: ["Vue", "PHP", "MySQL", "Bootstrap"],
    code: "https://github.com/sudoRaul/Proyecto-Free-Tours-Vue"
  },
  {
    title: "Sport Center La Morada",
    description: "Sports center booking management application with role-based access control, user and facility management, security features, and more.",
    image: sportCenter,
    technologies: ["Vue", "Flask", "MySQL", "Bootstrap"],
    code: "https://github.com/sudoRaul/TFG_Complejo_Deportivo"
  }
];
---

<section id="projects" class="py-20 max-w-6xl mx-auto px-4 fade-in-section">
  <h2 class="text-white font-black md:text-[60px] sm:text-[50px] xs:text-[40px] text-[30px] text-center fade-in-section mb-10">Projects</h2>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
    {projects.map(project => (
      <div class="relative group rounded-2xl overflow-hidden shadow-lg bg-gray-900 flex flex-col min-h-[400px]">
        <img
          src={typeof project.image === "string" ? project.image : project.image.src}
          alt={project.title}
          class="absolute inset-0 w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-105 opacity-80"
          loading="lazy"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/60 to-transparent"></div>
        <div class="relative z-10 flex flex-col justify-end h-full p-6">
          <h3 class="text-white text-2xl font-bold mb-2 drop-shadow-lg">{project.title}</h3>
          <p class="text-gray-300 text-sm mb-4 line-clamp-3">{project.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            {project.technologies.map(tech => (
              <span class="bg-cyan-800/80 text-cyan-100 text-xs px-2 py-1 rounded shadow">{tech}</span>
            ))}
          </div>
          <div class="flex gap-3">
            {project.code && (
              <a href={project.code} target="_blank" class="text-sm bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded shadow transition">Code</a>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

<script src="/src/assets/fade-in.js"></script>

<style>
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>