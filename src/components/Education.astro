---
import virgenCarmen from '../multimedia/icons/virgenCarmen.jpeg';
import sierraSegura from '../multimedia/icons/sierraSegura.jpg';
---

<section id="education" class="py-20 max-w-6xl mx-auto px-4">
  <h2
    class="text-white font-black md:text-[60px] sm:text-[50px] xs:text-[40px] text-[30px] text-center fade-in-section mb-10"
  >
    Education
  </h2>

  <!-- Layout para pantallas SM en adelante -->
  <div class="relative hidden sm:grid grid-cols-3 gap-4 items-center">
    <!-- Bloque izquierdo -->
    <div class="col-span-1 flex justify-end">
      <div class="bg-indigo-900/50 text-white rounded-lg p-6 w-full max-w-md animate-zoomIn">
        <span class="text-gray-300 text-sm block mb-2">2023 - 2025</span>
        <h3 class="text-xl font-semibold">
          Higher Technician in Web Application Development
        </h3>
        <p class="mt-2 text-sm font-bold uppercase px-4 py-2 rounded-full bg-gradient-to-r from-cyan-500 via-indigo-500 to-purple-500 text-white shadow-md center-pill">
          I.E.S Virgen del Carmen, Jaén
        </p>
      </div>
    </div>

    <!-- Línea y escudo central -->
    <div class="col-span-1 flex flex-col items-center">
      <!-- Línea central -->
      <div
        class="w-1 bg-white h-full absolute top-0 left-1/2 transform -translate-x-1/2 z-0"
      >
      </div>

      <!-- Escudo -->
      <div
        class="col-span-1 flex justify-center items-center animate-zoomIn"
        style="animation-delay: 0.2s;"
      >
        <div
          class="w-20 h-20 bg-white rounded-full border-4 border-gray-950 flex items-center justify-center overflow-hidden"
        >
          <img
            src={virgenCarmen.src}
            alt="IES Virgen del Carmen"
            class="w-18 h-18 object-contain"
          />
        </div>
      </div>
    </div>

    <!-- Vacío -->
    <div class="col-span-1"></div>

    <!-- Vacío -->
    <div class="col-span-1"></div>

    <!-- Escudo 2 -->
    <div class="col-span-1 flex justify-center items-center animate-zoomIn" style="animation-delay: 0.2s;">
      <div class="w-20 h-20 bg-white rounded-full border-4 border-gray-950 flex items-center justify-center overflow-hidden">
        <img src={sierraSegura.src} alt="IES Sierra de Segura" class="w-20 h-20 object-contain" />
      </div>
    </div>

    <!-- Bloque derecho -->
    <div class="col-span-1 flex justify-start mt-12">
      <div class="bg-indigo-900/50 text-white rounded-lg p-6 w-full max-w-md animate-zoomIn" style="animation-delay: 0.2s;">
        <span class="text-gray-300 text-sm block mb-2">2017 - 2023</span>
        <h3 class="text-xl font-semibold">
          Secondary and Pre-University Education
        </h3>
        <p class="mt-2 text-sm font-bold uppercase px-4 py-2 rounded-full bg-gradient-to-r from-cyan-500 via-indigo-500 to-purple-500 text-white shadow-md center-pill">
          I.E.S Sierra de Segura
        </p>
      </div>
    </div>
  </div>

  <!-- Layout para pantallas XS (muy pequeñas) -->
  <div class="sm:hidden flex flex-col gap-8 items-center mt-12">
    <!-- Bloque 1 -->
    <div class="bg-indigo-900/50 text-white rounded-lg p-6 w-full max-w-md animate-zoomIn">
      <span class="text-gray-300 text-sm block mb-2">2023 - 2025</span>
      <h3 class="text-xl font-semibold">
        Higher Technician in Web Application Development
      </h3>
      <p class="mt-2 text-sm font-bold uppercase px-4 py-2 rounded-full bg-gradient-to-r from-cyan-500 via-indigo-500 to-purple-500 text-white shadow-md center-pill">
        I.E.S Virgen del Carmen, Jaén
      </p>
    </div>

    <!-- Bloque 2 -->
    <div class="bg-indigo-900/50 text-white rounded-lg p-6 w-full max-w-md animate-zoomIn" style="animation-delay: 0.2s;">
      <span class="text-gray-300 text-sm block mb-2">2017 - 2023</span>
      <h3 class="text-xl font-semibold">
        Secondary and Pre-University Education
      </h3>
      <p class="mt-2 text-sm font-bold uppercase px-4 py-2 rounded-full bg-gradient-to-r from-cyan-500 via-indigo-500 to-purple-500 text-white shadow-md center-pill">
        I.E.S Sierra de Segura
      </p>
    </div>
  </div>
</section>


<style>
.center-pill {
  letter-spacing: 1px;
  box-shadow: 0 2px 12px 0 rgba(80, 0, 120, 0.15);
  border: 1.5px solid rgba(255,255,255,0.15);
  transition: transform 0.2s;
}
.center-pill:hover {
  transform: scale(1.04) rotate(-1deg);
}
</style>